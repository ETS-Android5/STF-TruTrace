<?xml version="1.0" encoding="utf-8"?>
<!-- A CardView that contains a TextView -->
<android.support.v7.widget.CardView
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    card_view:cardElevation="10dp"
    card_view:cardCornerRadius="4dp"
    android:clickable="true"
    android:layout_margin="1dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_alphabet"
            android:layout_width="346dp"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Alphabet text"
            android:textSize="22sp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/checkBox_tag_item"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true" />

        <CheckBox
            android:id="@+id/checkBox_tag_item"
            android:layout_width="29dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_alphabet"
            android:layout_alignBottom="@+id/tv_alphabet"
            android:layout_alignParentStart="true"
            android:text=""
            android:theme="@style/CheckBoxFilterStyle" />
    </RelativeLayout>
</android.support.v7.widget.CardView>





